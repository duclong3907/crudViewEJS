<%- include('../brand/header') %>

    <body>
        <a href="mobile/add" class="btn btn-success">Add a new mobile</a>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Model</th>
                    <th scope="col">Image</th>
                    <th scope="col">Brand</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% index=1; for(let mobile of mobiles) {%>
                    <tr>
                        <th scope="row">
                            <%= index++%>
                        </th>
                        <td>
                            <%= mobile.model%>
                        </td>
                        <td>
                            <img src="<%= mobile.image%>" alt="" height="100" width="100">
                        </td>
                        <td>
                            <%= mobile.brand.name%>
                        </td>
                        <td>
                            <a href="mobile/edit/<%= mobile._id %>" class="btn btn-primary">Edit</a>
                            <a href="mobile/delete/<%= mobile._id %>" class="btn btn-danger"
                                onclick="return confirm('Are you sure?')">Delete</a>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </body>